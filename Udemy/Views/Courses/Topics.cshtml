@model IEnumerable<CourseViewModel>

@{
    ViewData["Title"] = "courses";
}

<div class="card mt-3">
    <div class="card-body p-0 ">
        @*overflow:scroll*@
        @if (!Model.Any())
        {
            <div class="alert alert-warning m-0" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                Sorry, There is no courses in this topic right now!
            </div>
        }
        else
        {
            <table class="table table-hover table-responsive table-light table-striped m-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>CreatedOn</th>
                        <th>LastUpdatedOn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Title</td>
                            <td>
                                <span class="js-status badge rounded-pill bg-@(course.IsDeleted ? "danger" : "success")">
                                    @(course.IsDeleted ? "Deleted" : "Available")
                                </span>
                            </td>
                            <td>@course.CreatedOn</td>
                            <td class="js-updated-on">@course.LastUpdatedOn</td>   
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>